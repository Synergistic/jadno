
#:import kivy kivy


<GameArea>:
  canvas:
    Rectangle:
      source: 'background.jpg'
      size: self.size

  BoxLayout: 
    padding: 10
    spacing: 10
    size_hint: 1, None
    pos_hint: {'top': 1}
    height: 44
<HUD>:
  orientation: 'horizontal'
  
  StackLayout:
    orientation: 'tb-lr'
    Label:
      markup: True
      text: '[i]Jadno[/i]'
      size_hint: (0.15, 0.05)
      

  FloatLayout:
    Label:
      text: str(root.whose_turn[root.turns % 2]) + ' Turn (' + str(root.turns) +')'
      color: 0, 0, 0, 1
      font_size: '36sp'
      pos_hint: {'center_y': 0.95, 'center_x': 0.5}
    Label:
      text: root.message
      color: 0, 0, 0, 1
      font_size: '24sp'
      pos_hint: {'center_y': 0.42, 'center_x': 0.5}
    Label:
      text: str(root.top_card)
      color: 0, 0, 0, 1
      font_size: '36sp'
      pos_hint: {'center_y': 0.50, 'center_x': 0.5}
      
      
  StackLayout:
    orientation: 'tb-rl'
    Button:
      text: 'New Game'
      on_release: root.start_game()
      size_hint: (0.3, 0.1)
    Button:
      text: 'Draw Card'
      on_release: root.add_a_card()
      size_hint: (0.3, 0.1)
    Button:
      text: 'Discard Card'
      on_release: root.remove_a_card()
      size_hint: (0.3, 0.1)
      
<CardImage>:
  do_rotation: False
  do_scale: False
  do_translation: root.moving
  size_hint: (0.117, 0.3125)

  canvas:
    Color:
      a: 1
    Rectangle:
      size: self.size
      source: root.src_img

