
#:import kivy kivy


<GameArea>:
	
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'background.jpg'
            size: self.size

    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44
        Label:
            height: 24
            text_size: self.width, None
            color: (1, 1, 1, .8)
            text: 'Jadno'
		Label:
			height: 24
			text_size: self.width, None
			color: (1, 1, 1, .8)


<CardImage>:
	do_rotation: False
	do_scale: False
	do_translation: root.moving

    canvas:
        Color:
            a: 1
        Rectangle:
            size: self.size
			source: root.src_img

<HUD>:
	orientation: 'vertical'
	Button:
		size_hint: (0.1, 0.35)
		pos_hint: {'center_x': 0.95}
	Button:
		text: 'New Game'
		on_release: root.start_game()
		size_hint: (0.1, 0.1)
		pos_hint: {'center_x': 0.95}
	Button:
		text: 'Draw Card'
		on_release: root.add_a_card()
		size_hint: (0.1, 0.1)
		pos_hint: {'center_x': 0.95}
	Button:
		text: 'Remove Card'
		on_release: root.remove_a_card()
		size_hint: (0.1, 0.1)
		pos_hint: {'center_x': 0.95}
	Button:
		size_hint: (0.1, 0.35)
		pos_hint: {'center_x': 0.95}