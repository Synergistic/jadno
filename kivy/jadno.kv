
#:import kivy kivy


FloatLayout:
	
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'background.jpg'
            size: self.size

    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44
        Label:
            height: 24
            text_size: self.width, None
            color: (1, 1, 1, .8)
            text: 'Jadno'
		Label:
			height: 24
			text_size: self.width, None
			color: (1, 1, 1, .8)


<Cardimg>:

    do_scale: False
    do_rotation: False
    do_translation: root.moving
	
    size: image.size
    pos: root.loc

    Image:
        id: image
        source: root.source
        # create initial image
        size: 150, 225


<HUD>:
	orientation: 'horizontal'

